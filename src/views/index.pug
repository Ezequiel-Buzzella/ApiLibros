extends header.pug

block content
  h1= message

  a(href='/agregarLibro') Agregar un libro

  table(class="table")
    thead
      tr
        th(scope="col") Titulo
        th(scope="col") Autor
        th(scope="col") Descripcion
    tbody
      each libro in libros
        tr
          td= libro.titulo
          td= libro.autor
          td= libro.descripcion
